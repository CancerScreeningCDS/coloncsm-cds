  <action id="SDMContinueScreeningAge">
    <title value="Recommendation: Selectively offer screening"/>
    <description value="The USPSTF recommends that clinicians selectively offer screening for colorectal cancer in adults aged 76 to 85 years."/>
    <documentation>
      <type value="citation"/>
      <label value="USPSTF"/>
      <display value="Screening for Colorectal Cancer: US Preventive Services Task Force Recommendation Statement"/>
      <citation value="US Preventive Services Task Force. Screening for Colorectal Cancer: US Preventive Services Task Force Recommendation Statement. JAMA. Published online May 18, 2021."/>
      <url value="https://www.uspreventiveservicestaskforce.org/uspstf/recommendation/colorectal-cancer-screening"/>
      <document>
        <url value="https://www.uspreventiveservicestaskforce.org/uspstf/recommendation/colorectal-cancer-screening"/>
      </document>
    </documentation>
    <condition>
      <kind value="applicability"/>
      <expression>
        <language value="text/cql"/>
        <expression value="ExistsSDMContinueScreeningAge"/>
      </expression>
    </condition>
    <definitionCanonical value="http://cancerscreeningcds.github.io/crcsm-cds/ActivityDefinition/CommunicateSDMContinueScreening|1.0.0"/>
    <dynamicValue>
      <path value="reasonCode[0].coding[0]"/>
      <expression>
        <language value="text/cql"/>
        <expression value="SDMContinueScreeningAgeReason"/>
      </expression>
    </dynamicValue>
  </action>
  <action id="SDMContinueScreeningLifeExp">
    <title value="Recommendation: Discuss decision to continue screening"/>
    <description value="ACS advises that individuals should continue colorectal cancer screening as long as their overall health is good and they have a life expectancy of 10 years or more. Decision to continue screening in cases of limited life expectancy should be based on shared decision-making."/>
    <documentation>
      <type value="citation"/>
      <label value="ACS"/>
      <display value="Colorectal cancer screening for average‐risk adults: 2018 guideline update from the American Cancer Society"/>
      <citation value="Wolf, A. M. D., et al. (2018). Colorectal cancer screening for average‐risk adults: 2018 guideline update from the American Cancer Society. CA: A Cancer Journal for Clinicians, 68(4), 250–281. https://doi.org/10.3322/caac.21457"/>
    </documentation>
    <condition>
      <kind value="applicability"/>
      <expression>
        <language value="text/cql"/>
        <expression value="ExistsSDMContinueScreeningLifeExp"/>
      </expression>
    </condition>
    <definitionCanonical value="http://cancerscreeningcds.github.io/crcsm-cds/ActivityDefinition/CommunicateSDMContinueScreening|1.0.0"/>
    <dynamicValue>
      <path value="reasonCode[0].coding[0]"/>
      <expression>
        <language value="text/cql"/>
        <expression value="SDMContinueScreeningLifeExpReason"/>
      </expression>
    </dynamicValue>
  </action>
  <action id="StopScreeningAge">
    <title value="Recommendation: Stop screening"/>
    <description value="Evidence is lacking on benefits and harms of colorectal cancer screening for individuals aged 86 and older. Competing causes of mortality likely preclude survival benefit that would outweigh the harms of screening."/>
    <condition>
      <kind value="applicability"/>
      <expression>
        <language value="text/cql"/>
        <expression value="ExistsStopScreeningAge"/>
      </expression>
    </condition>
    <definitionCanonical value="http://cancerscreeningcds.github.io/crcsm-cds/ActivityDefinition/CommunicateRecommendationStopScreening|1.0.0"/>
